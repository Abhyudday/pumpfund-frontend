# Trading Bot Configuration
# Copy this file to .env and fill in your values

# ===================
# EXECUTION MODE
# ===================
# independent = same trade on both exchanges
# arb_hedge = buy on cheaper, hedge on more expensive
MODE=independent

# Paper trading (true = no real orders)
PAPER=true

# ===================
# EXCHANGE API KEYS
# ===================
# Coinbase Advanced Trade API
# NEW FORMAT (Cloud API with private key):
COINBASE_API_KEY=b8b6c706-800e-46b2-9ee6-df7b06f91b0b
COINBASE_PRIVATE_KEY=-----BEGIN EC PRIVATE KEY-----\nMHcCAQEEIGUCHFHguvG5j3cNJb+mUJafvB0BrekyEE/stArYWa3roAoGCCqGSM49\nAwEHoUQDQgAEH91SuA/YVDweBmY0IhfpoklwC65xfN2LnNckF4T3Evsbcu5V+3Qp\nEacgUAWuYYATbFkWCvkwnKbm5MwPh6r2Hg==\n-----END EC PRIVATE KEY-----

# OLD FORMAT (Legacy API - leave empty if using new format):
COINBASE_API_SECRET=
COINBASE_PASSPHRASE=
COINBASE_SANDBOX=false

# Kraken (leave empty to skip Kraken)
KRAKEN_API_KEY=
KRAKEN_API_SECRET=
KRAKEN_SANDBOX=false

# ===================
# WEBHOOK SECURITY
# ===================
# HMAC secret for TradingView webhook verification
WEBHOOK_SECRET=test_secret_12345

# ===================
# TRADING RULES
# ===================
# Maximum trades per day (resets at 00:00 UTC)
MAX_TRADES_PER_DAY=20

# Blocked trading window (UTC)
BLOCKED_WINDOW_START_UTC=22:00
BLOCKED_WINDOW_END_UTC=00:00

# Risk parameters (percentages)
STOP_LOSS_PCT=6
TAKE_PROFIT_PCT=15

# Risk per trade (decimal: 0.02 = 2%, 0.01 = 1%)
# Below 100k equity: 2%
# Above 100k equity: 1% (locked forever)
RISK_PCT_THRESHOLD_1=0.02
RISK_PCT_THRESHOLD_2=0.01

# Maximum slippage allowed (percentage)
MAX_SLIPPAGE_PCT=0.35

# ===================
# STRENGTH INDICATOR
# ===================
STRENGTH_INDICATOR=ADX
STRENGTH_PERIOD=14
STRENGTH_BASELINE=20

# Maximum price extension from braid (percentage)
MAX_EXTENSION_PCT=1.5

# ===================
# SYMBOL MAPPING
# ===================
SYMBOL_BASE=BTC
SYMBOL_QUOTE_COINBASE=USD
SYMBOL_QUOTE_KRAKEN=USD

# ===================
# SERVER
# ===================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ===================
# DATABASE
# ===================
DATABASE_URL=sqlite:///trading_bot.db

# ===================
# NOTIFICATIONS (Optional)
# ===================
# Webhook URL for alerts (e.g., Slack, Discord)
ALERT_WEBHOOK_URL=

# Email for critical alerts
ALERT_EMAIL=
